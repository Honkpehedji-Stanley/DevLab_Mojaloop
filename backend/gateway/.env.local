# Configuration pour run Django en local avec services Docker
DEBUG=True
DJANGO_SETTINGS_MODULE=gateway.settings.dev

# Database - pointer vers le conteneur postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/gateway_db

# Redis - pointer vers le conteneur redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Mojaloop SDK Adapter - pointer vers le conteneur
SCHEME_ADAPTER_URL=http://localhost:4001

# Backend endpoint - localhost puisque Django tourne en local
BACKEND_ENDPOINT=http://localhost:8000

# DFSP IDs
PAYER_DFSP_ID=payerdfsp
PAYEE_DFSP_ID=payeedfsp

# Secret key
SECRET_KEY=django-insecure-local-dev-key-change-in-production
