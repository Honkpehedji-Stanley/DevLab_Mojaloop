# Configuration Django
DJANGO_SECRET_KEY=change-me-in-production-use-strong-random-key
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=gateway.settings.dev

# Base de donn√©es
# Utiliser SQLite (True) ou PostgreSQL (False)
USE_SQLITE=True

# Configuration PostgreSQL (seulement si USE_SQLITE=False)
POSTGRES_DB=gateway
POSTGRES_USER=gateway
POSTGRES_PASSWORD=change-me-secure-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# URL du SDK Scheme Adapter Mojaloop
# En local Docker: http://mojaloop-connector-load-test:4001
SCHEME_ADAPTER_URL=http://mojaloop-connector-load-test:4001

# Configuration Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Python
PYTHONPATH=/app/gateway
PYTHONUNBUFFERED=1
